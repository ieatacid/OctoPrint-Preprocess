<form class="form-horizontal">
	<h3>{{ _('GCode Preprocess Search & Replace') }}</h3>
	<div class="row-fluid">
		<div class="span2"><h4>{{ _('Name') }}</h4></div>
		<div class="span5"><h4>{{ _('RegExp') }} <small><a href="https://github.com/ieatacid/OctoPrint-Preprocess/wiki/Regexp-Syntax" target="_blank">?</a></small></h4></div>
		<div class="span3"><h4>{{ _('Replacement String') }}</h4></div>
	</div>
	<div data-bind="foreach: searchReplace">
		<div class="row-fluid" style="margin-bottom: 5px">
			<div class="span2">
				<input type="text" class="span12" data-bind="value: name">
			</div>
			<div class="span5">
				<input type="text" class="span12" data-bind="value: regexp">
			</div>
			<div class="span3">
				<input type="text" class="span12" data-bind="value: replaceString">
			</div>
			<div class="span2">
				<a title="Remove Filter" class="btn btn-danger" data-bind="click: $root.removeSearchReplace"><i class="fa fa-trash-o"></i></a>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="offset10 span2">
			<a title="Add Filter" class="btn btn-primary" data-bind="click: $root.addSearchReplace"><i class="fa fa-plus"></i></a>
		</div>
	</div>
</form>
